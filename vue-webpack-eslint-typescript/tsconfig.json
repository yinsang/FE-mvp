{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    // 与 Vue 的浏览器支持保持一致
    "target": "es5",
    "baseUrl": ".",
    // "noImplicitThis":false,
    // 这可以对 `this` 上的数据属性进行更严格的推断
    "strict": true,
    // 如果使用 webpack 2+ 或 rollup，可以利用 tree-shake:
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "experimentalDecorators": true,
    // "allowJs": true,
  },
    "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts"
  ],
  "include": [
    "./src/**/*"
]
}